<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/milk"
    tools:context=".fragment.CreatePostEncourageFragment">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/open_sans"
        android:text="Why should we work there?"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/facilitiesAndPerks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:paddingBottom="16dp"
                android:text="Facilities and Perks"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/facilitiesRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignBounds"
                    android:columnCount="2"
                    android:rowCount="6">

                    <!-- Row 1 -->
                    <!-- Free wifi -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioFreeWifi"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Free wifi" />
                    </LinearLayout>

                    <!-- Rest area -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioRestArea"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Rest area" />
                    </LinearLayout>

                    <!-- Row 2 -->
                    <!-- Flexible breaks -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioFlexibleBreaks"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Flexible breaks" />
                    </LinearLayout>

                    <!-- Parking spot -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioParkingSpot"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Parking spot" />
                    </LinearLayout>

                    <!-- Row 3 -->
                    <!-- Locker -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioLocker"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Locker" />
                    </LinearLayout>

                    <!-- Employee events -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioEmployeeEvents"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Employee events" />
                    </LinearLayout>

                    <!-- Row 4 -->
                    <!-- Air-conditioned -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioAirConditioned"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Air-conditioned" />
                    </LinearLayout>

                    <!-- Safety equipment -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioSafetyEquipment"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Safety equipment" />
                    </LinearLayout>

                    <!-- Row 5 -->
                    <!-- Casual dress code -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioCasualDress"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Casual dress code" />
                    </LinearLayout>

                    <!-- Pet friendly -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioPetFriendly"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Pet friendly" />
                    </LinearLayout>

                    <!-- Row 6 -->
                    <!-- Training programs -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/type_radio_bg"
                        android:gravity="center">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioTrainingPrograms"
                            style="@style/CategoryRadioButton"
                            android:layoutDirection="rtl"
                            android:text="Training programs" />
                    </LinearLayout>
                </GridLayout>
            </RadioGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/writeSomething"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facilitiesAndPerks">

        <EditText
            android:id="@+id/writeSomethingText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fontFamily="@font/open_sans"
            android:gravity="start"
            android:hint="Words of encouragement (please write in listing)"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:scrollHorizontally="true"
            android:textSize="12sp" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fontFamily="@font/dm_sans"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Back"
                android:textSize="15sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nextButton"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 4 of 5"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="80"
                android:progressDrawable="@drawable/custom_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/step" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:fontFamily="@font/dm_sans"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>