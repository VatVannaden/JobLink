<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/milk"
    tools:context=".activity.LoginActivity">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="65dp"
      android:layout_marginEnd="40dp"
      android:text="Skip"
      android:textAppearance="@style/skip_tx"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="184dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/sign_in_tx"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Sign in to start your journey"
        android:textAppearance="@style/sign_in_tx_main"
        />

    <TextView
        android:id="@+id/sign_in_tx_sub"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:alpha="0.8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Connect with opportunities that build your future and strengthen your community."
        android:textAppearance="@style/sign_in_tx_sub"
        />



    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Email"
        android:textAppearance="@style/label_tx"
        android:gravity="center_vertical"
        />


    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/label"
        android:ems="25"
        android:hint="Email"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="20dp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Password"
        android:textAppearance="@style/label_tx"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/label"
        android:drawableEnd="@drawable/ico_eye_open"
        android:ems="16"
        android:hint="Password"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingHorizontal="20dp"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Forgot Password?"
        android:layout_gravity="right"
        android:textAppearance="@style/label_tx"
        android:gravity="center_vertical"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/frame_33849"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/label_button"
        android:layout_marginTop="30dp"
        app:backgroundTint="@null"
        android:text="Sign in"
        android:textAppearance="@style/label_button_tx" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/label">
      <ImageView
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:layout_marginRight="5dp"
          android:background="@drawable/ico_google"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="@style/label_button_tx"
          android:textColor="@color/text_ico"
          android:text="Sign in with Google"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:text="@string/dont_have_an_account_yet"
        android:textAppearance="@style/label_tx" />


  </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>