<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="start_screen_tx_main">
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="start_screen_tx_sec">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="skip_tx">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_tx">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">#292D32</item>
    </style>

    <style name="label_button_tx">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sign_in_tx_main">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sign_in_tx_sub">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="under_button_tx">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">#292D32</item>
    </style>


    <style name="corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="corner20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="corner10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="cate_tx">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="explore_tx">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

        <style name="DialogAnimation">
            <item name="android:windowEnterAnimation">@anim/slide_up</item>
            <item name="android:windowExitAnimation">@anim/slide_down</item>
        </style>

    <attr name="cardBackground" format="color" />
    <attr name="buttonSecondary" format="color" />

    <style name="CategoryRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@drawable/custom_radio_selector</item>
        <item name="buttonTint">@null</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="CategoryText_Expanded">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="CategoryText_Collapsed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/text_ico</item>
        <item name="android:textColorHint">@color/text_ico</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>