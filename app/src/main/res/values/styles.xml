<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="start_screen_tx_main">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="start_screen_tx_sec">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="skip_tx">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_tx">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">#292D32</item>
    </style>

    <style name="label_button_tx">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sign_in_tx_main">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sign_in_tx_sub">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_ico</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="under_button_tx">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">#292D32</item>
    </style>


    <style name="corner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

</resources>